rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // App Users
    // =====================================================================
    match /app_users/{userId} {
      // Any authenticated user can read user profiles (needed for chat, contacts, search by email)
      allow read: if request.auth != null;

      // Users can only write their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // =====================================================================
    // Chats
    // =====================================================================
    match /chats/{chatId} {
      // Only participants can read the chat
      allow read: if request.auth != null
                  && request.auth.uid in resource.data.participants;

      // Any authenticated user can create a chat (needed for starting new conversations)
      allow create: if request.auth != null
                    && request.auth.uid in request.resource.data.participants;

      // Only participants can update the chat (send messages, mark as read)
      allow update: if request.auth != null
                    && request.auth.uid in resource.data.participants;

      // Prevent chat deletion from client
      allow delete: if false;

      // Messages subcollection
      match /messages/{messageId} {
        // Only chat participants can read messages
        allow read: if request.auth != null
                    && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;

        // Only chat participants can send messages
        allow create: if request.auth != null
                      && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
                      && request.resource.data.senderId == request.auth.uid;

        // Only the original sender can edit or soft-delete their own message
        allow update: if request.auth != null
                      && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
                      && request.auth.uid == resource.data.senderId
                      // only allow changing text, editedAt, isDeleted
                      && request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['text', 'editedAt', 'isDeleted']);

        // Prevent hard deletion from client
        allow delete: if false;
      }
    }
  }
}
